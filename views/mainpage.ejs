<% include includes/header.ejs %> 



<section id="mainPage">
<div class="container-fluid ">
    <div class="row">
      <div class="col-sm-8">
<!--Slide Start-->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      
      <% for(var i=0; i < data.length; i++) { %>
        <%if (i == 0) { %>
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <% } else{ %>  
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
          <% } %>
        <% } %>
    </ol>
    <div class="carousel-inner">
      <% for(var i=0; i < data.length; i++) { %>
        <%if (i == 0) { %>
          <div class="carousel-item active">
              <img class="d-block w-100" src="<%= data[i].resim %>" alt="First slide">
              <div class="carousel-caption d-none d-md-block">
                  <h5><%= data[i].baslik %></h5>
                  <p><%= data[i].haber %></p>
                </div>
            </div>
            <% } else{ %>  
              <div class="carousel-item">
                  <img class="d-block w-100" src="<%= data[i].resim %>" alt="Third slide">
                  <div class="carousel-caption d-none d-md-block">
                      <h5><%= data[i].baslik %></h5>
                      <p><%= data[i].haber %></p>
                    </div>
                </div> 
              <% } %>
     <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<!--Slide end-->
      </div>
      <div class="col-sm-4">
<!--card başlangıç-->
<div class="card">
    <h5 class="card-header">Featured</h5>
    <div class="card-body">
      <h5 class="card-title">Special title treatment</h5>
      <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
<!--card bitiş-->
<!--KAYAN DUYURU BAŞLANGIÇ-->
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <% for(var i=0; i < duyuru.length; i++) { %>
          <%if (i == 0) { %>
            <div class="carousel-item active">
  <!--card başlangıç-->
  <div class="card">
      <h5 class="card-header"><%- duyuru[i].duyuruBaslik %></h5>
      <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted"><%- duyuru[i].duyuruTarihi %></h6>
        <p class="card-text"><%- duyuru[i].duyuruIcerik %></p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  <!--card bitiş-->
              </div>
              <% } else{ %>  
                <div class="carousel-item">
  <!--card başlangıç-->
  <div class="card">
      <h5 class="card-header"><%- duyuru[i].duyuruBaslik %></h5>
      <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted"><%- duyuru[i].duyuruTarihi %></h6>
        <p class="card-text"><%- duyuru[i].duyuruIcerik %></p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  <!--card bitiş-->
                </div> 
                <% } %>
       <% } %>
      </div>
   
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
   
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
 
    </a>
  </div>
  <!--KAYAN DUYURU BİTİŞ-->
      </div>
    </div>
</div>
</section>


<script type="text/javascript">
var timer = setInterval(istek,10000)

    function istek(){

      $.ajax({
          type: 'post',
          url: window.location+'/a/',
          dataType: 'json',
          success: (data)=>{  
            $('title').html('basıldı')      
            for(var k in data){
             // console.log("başarılı",data[k])
              $('#liste').append('<li>'+data[k].baslik+'</li>'+'<li>'+data[k].haber+'</li><br>');
            }
          },

          beforeSend: function(){
              $('#liste').empty();
          },

          error: function(data){
            $('#liste').append("İstek Başarısız");
          }
      });
    }
  </script>
 


