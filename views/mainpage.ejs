<% include includes/header.ejs %> 



<section id="mainPage">
<div class="container-fluid ">
    <div class="row">
      <div class="col-sm-8">
<!--Slide Start-->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      
      <% for(var i=0; i < data.length; i++) { %>
        <%if (i == 0) { %>
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <% } else{ %>  
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
          <% } %>
        <% } %>
    </ol>
    <div class="carousel-inner">
      <% for(var i=0; i < data.length; i++) { %>
        <%if (i == 0) { %>
          <div class="carousel-item active">
              <img class="d-block w-100" src="<%= data[i].resim %>" alt="First slide">
              <div class="carousel-caption d-none d-md-block">
                  <h5><%= data[i].baslik %></h5>
                  <p><%= data[i].haber %></p>
                </div>
            </div>
            <% } else{ %>  
              <div class="carousel-item">
                  <img class="d-block w-100" src="<%= data[i].resim %>" alt="Third slide">
                  <div class="carousel-caption d-none d-md-block">
                      <h5><%= data[i].baslik %></h5>
                      <p><%= data[i].haber %></p>
                    </div>
                </div> 
              <% } %>
     <% } %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<!-- Slide End -->
      </div>
      <div class="col-sm-4">
<!-- Card Başlangıç -->
<div class="card">
    <h5 class="card-header">Ders Programı : <%- dersProg[0].gunAdi %></h5>
    <div class="card-body">
      <% for(var i=0; i < dersProg.length; i++) { %>
      <p class="card-text"><%- dersProg[i].dersAdi %> - <%- dersProg[i].dersSaati %> - <%- dersProg[i].derslik %></p>
      <% } %>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
<!-- card bitiş -->
<!-- KAYAN DUYURU BAŞLANGIÇ -->
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner"  id="duyur">
        <% for(var i=0; i < duyuru.length; i++) { %>
          <%if (i == 0) { %>
            <div class="carousel-item active">
  <!-- card başlangıç -->
  <div class="card">
      <h5 class="card-header"><%- duyuru[i].duyuruBaslik %></h5>
      <div class="card-body">
        <p class="card-text"><%- duyuru[i].duyuruIcerik %></p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  <!--card bitiş-->
              </div>
              <% } else{ %>  
                <div class="carousel-item">
  <!--card başlangıç-->
  <div class="card">
      <h5 class="card-header"><%- duyuru[i].duyuruBaslik %></h5>
      <div class="card-body">
        <p class="card-text"><%- duyuru[i].duyuruIcerik %></p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  <!--card bitiş-->
                </div> 
                <% } %>
       <% } %>
      </div>
   
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
   
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
 
    </a>
  </div>
  <!--KAYAN DUYURU BİTİŞ-->
      </div>
    </div>
</div>
</section>


<script type="text/javascript">
var timer = setInterval(istek,30000)

    function istek(){

      $.ajax({
          type: 'post',
          url: '/computer/a/',
          dataType: 'json',
          success: (data)=>{  
            for(var k in data){
             if(k==0)
             $('#duyur').append('<div class="carousel-item active">'+
      '<div class="card">'+
      '<h5 class="card-header">'+ data[k].duyuruBaslik+'</h5>'+
     ' <div class="card-body">' +
       ' <p class="card-text">'+data[k].duyuruIcerik+'</p>'+
       ' <a href="#" class="btn btn-primary">Go somewhere</a>'+
       ' </div> </div> </div> ');
else             
       $('#duyur').append('<div class="carousel-item">'+
      '<div class="card">'+
      '<h5 class="card-header">'+ data[k].duyuruBaslik+'</h5>'+
     ' <div class="card-body">' +
       ' <p class="card-text">'+data[k].duyuruIcerik+'</p>'+
       ' <a href="#" class="btn btn-primary">Go somewhere</a>'+
       ' </div> </div> </div> ');
            }
          },

          beforeSend: function(){
              $('#duyur').empty();
          },

          error: function(data){
            $('#duyur').append("İstek Başarısız");
          }
      });
    }
  </script>
 
