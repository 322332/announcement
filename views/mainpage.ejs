<% include includes/header.ejs %> 

<div class="row">
    <div class="col-6">
      <div class="card">
        <h5 class="card-header">JS Json</h5>
        <div class="card-body">
            <marquee align="middle" scrollamount="1" height="150px" width="100%" direction="down"scrolldelay="1">
              <ul id="liste"></ul>
            </marquee>
        </div>
        <div class="card-footer">
          <input class="btn btn-success" type="submit" onclick="istek();">
        </div>
      </div>
    </div>


<script type="text/javascript">
var timer = setInterval(istek,10000)

    function istek(){

      $.ajax({
          type: 'post',
          url: window.location+'/a/',
          dataType: 'json',
          success: (data)=>{  
            $('title').html('basıldı')      
            for(var k in data){
             // console.log("başarılı",data[k])
              $('#liste').append('<li>'+data[k].baslik+'</li>'+'<li>'+data[k].haber+'</li><br>');
            }
          },

          beforeSend: function(){
              $('#liste').empty();
          },

          error: function(data){
            $('#liste').append("İstek Başarısız");
          }
      });
    }
  </script>



